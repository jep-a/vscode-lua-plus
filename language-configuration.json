{
	"comments": {
		"lineComment": "--",
		"blockComment": [ "--[[", "]]" ]
	},
	"brackets": [
		["{", "}"],
		["[", "]"],
		["(", ")"]
	],
	"autoClosingPairs": [
		["{", "}"],
		["[", "]"],
		["(", ")"],
		["\"", "\""],
		["'", "'"]
	],
	"surroundingPairs": [
		["{", "}"],
		["[", "]"],
		["(", ")"],
		["\"", "\""],
		["'", "'"]
	],
	"indentationRules": {
		"increaseIndentPattern": "^\\s*(((?:local\\s+)?function|else|elseif|for|if|until|while)|(.*\\sdo\\b))\\b[^\\{;]*$",
		"decreaseIndentPattern": "^\\s*((end|else|elseif)|[}\\]]\b)"
	}
}